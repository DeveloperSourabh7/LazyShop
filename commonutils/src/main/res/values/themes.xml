<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LazyShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/divider_color</item>
    </style>

    <style name="Lazy_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@drawable/til_border_drawable</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/ed_hint_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
    </style>

    <style name="Lazy_InputEditText">
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">60dp</item>
        <item name="singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="HelperText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>


    <style name="Lazy_Button_Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Lazy_Outline_Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">0dp</item>

    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    <style name="CircleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LazyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">16sp</item> <!-- menu item text size-->
    </style>
</resources>